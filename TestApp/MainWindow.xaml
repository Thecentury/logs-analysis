<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:LogAnalyzer.GUI.Views;assembly=LogAnalyzer.GUI" 
		Title="MainWindow" WindowState="Maximized">
	
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/LogAnalyzer.GUI;component/Views/CommonStyles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>
	
	<Grid>
		<DockPanel LastChildFill="True">
			<!--Header-->
			<ToolBar DockPanel.Dock="Top" Margin="0,5,0,5">
				<Button Content="Start new" Click="StartButton_Click"/>
				<Button Content="Pause all" Click="PauseAllButton_Click"/>
				<Button Content="Resume all" Click="ResumeAllButton_Click"/>
			</ToolBar>

			<Grid>
				<views:TabsView DataContext="{Binding}"/>
			</Grid>

		</DockPanel>
	</Grid>
</Window>
