<UserControl x:Class="LogAnalyzer.GUI.Views.DefaultTabHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" ToolTip="{Binding Tooltip}">
	
	<StackPanel Orientation="Horizontal">
		<Image Source="{Binding IconFile}" Stretch="None" VerticalAlignment="Center"/>
		<TextBlock Text="{Binding Header}" Margin="3,0,0,0" VerticalAlignment="Center"/>
		<Button Command="{Binding CloseCommand}" 
						Visibility="{Binding CloseButtonVisibility}"
						Width="16" Height="16" 
						VerticalContentAlignment="Top"
						Margin="4,0,4,0" Padding="0">
			<Image Source="pack://application:,,,/LogAnalyzer.GUI;component/Resources/cross-small-black.png"/>
			<!--<TextBlock VerticalAlignment="Bottom" Foreground="DarkGray">×</TextBlock>-->
		</Button>
	</StackPanel>

</UserControl>
