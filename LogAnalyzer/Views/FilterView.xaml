<UserControl x:Class="LogAnalyzer.GUI.Views.FilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
			 xmlns:views="clr-namespace:LogAnalyzer.GUI.Views" 
			 mc:Ignorable="d" 

			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             d:DesignHeight="300" d:DesignWidth="300">
	
	<DockPanel LastChildFill="True">
		<ToolBar DockPanel.Dock="Top" Margin="4,4,4,4">
			<Button Style="{DynamicResource toolbarButtonStyle}"
					Command="{Binding EditFilterCommand}" 
					ToolTip="Edit current filter">
				<Image Source="..\Resources\pencil.png" Stretch="None"/>
			</Button>
			<Button Style="{DynamicResource toolbarButtonStyle}"
					Command="{Binding RefreshCommand}" 
					ToolTip="Refresh view">
				<Image Source="..\Resources\arrow-circle-double.png" Stretch="None"/>
			</Button>
		</ToolBar>
		
		<views:LogEntriesListView/>
	</DockPanel>
</UserControl>
