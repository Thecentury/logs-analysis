<Window x:Class="LogAnalyzer.GUI.View.FilterEditorWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

		xmlns:core="clr-namespace:LogAnalyzer;assembly=LogAnalyzer"
		xmlns:vm="clr-namespace:LogAnalyzer.GUI.ViewModel"
		xmlns:local="clr-namespace:LogAnalyzer.GUI"
		xmlns:view="clr-namespace:LogAnalyzer.GUI.View"

		xmlns:fe="clr-namespace:ExpressionBuilderSample"

		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="LogAnalyzer Filter Editor" SizeToContent="WidthAndHeight"
		ShowInTaskbar="False"
		Icon="..\Resources\icon.png"
		WindowStartupLocation="CenterOwner"
		WindowState="Normal" ResizeMode="NoResize"
		>

	<StackPanel Orientation="Vertical">
		<fe:FilterEditor x:Name="filterEditor"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="4,0,4,8">
			<StackPanel.Resources>
				<Style TargetType="Button">
					<Setter Property="Width" Value="80"/>
					<Setter Property="Padding" Value="5"/>
				</Style>
			</StackPanel.Resources>

			<Button Content="OK" Margin="0,0,10,0" IsDefault="True" Command="{Binding OkCommand}"/>
			<Button Content="Cancel" IsCancel="True" Command="{Binding CloseCommand}"/>
		</StackPanel>
	</StackPanel>

</Window>
